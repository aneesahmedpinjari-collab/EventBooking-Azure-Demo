@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-lg fade-in-up">
            <div class="card-header text-center">
                <i class="fas fa-sign-in-alt fa-2x mb-2"></i>
                <h2 class="mb-0">Welcome Back!</h2>
                <p class="text-white-50 mb-0">Sign in to your account</p>
            </div>
            <div class="card-body p-4">
                <form asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope me-2"></i>Email Address
                        </label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="your@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock me-2"></i>Password
                        </label>
                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-4">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Remember me on this device
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-lg mb-3">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                    </button>
                </form>

                <div class="text-center mb-3">
                    <span class="text-muted">or</span>
                </div>
                
                <form asp-action="ExternalLogin" method="post">
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                    <button type="submit" name="provider" value="Google" class="btn btn-google w-100 btn-lg">
                        <i class="fab fa-google me-2"></i>Continue with Google
                    </button>
                </form>

                <hr class="my-4">
                
                <p class="text-center mb-0">
                    Don't have an account? 
                    <a asp-action="Register" class="text-decoration-none fw-bold">
                        Create one <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </p>
            </div>
        </div>
        
        <!-- Demo Credentials -->
        <div class="card mt-3 fade-in-up" style="animation-delay: 0.2s;">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="fas fa-info-circle text-info me-2"></i>Demo Credentials
                </h6>
                <small class="text-muted">
                    <strong>Admin:</strong> admin@eventbooking.com / Admin@123
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
