@model IEnumerable<Event>
@{
    ViewData["Title"] = "Upcoming Events";
}

<div class="main-container fade-in-up">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-calendar-alt text-primary me-2"></i>Upcoming Events
            </h2>
            <p class="text-muted mb-0">Discover amazing events happening near you</p>
        </div>
        @if (User.IsInRole("Organizer") || User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Create Event
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">No Events Available</h3>
            <p class="text-muted">Check back later for upcoming events!</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var evt in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card event-card">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(evt.ImageUrl))
                            {
                                <img src="@evt.ImageUrl" class="card-img-top" alt="@evt.Title">
                            }
                            else
                            {
                                <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                    <i class="fas fa-calendar-alt fa-4x text-white opacity-50"></i>
                                </div>
                            }
                            <span class="event-badge">
                                @evt.Price.ToString("C")
                            </span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@evt.Title</h5>
                            <p class="card-text text-muted">
                                @(evt.Description.Length > 100 ? evt.Description.Substring(0, 100) + "..." : evt.Description)
                            </p>
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-calendar text-primary me-2"></i>
                                    <small class="text-muted">@evt.EventDate.ToString("MMMM dd, yyyy")</small>
                                </div>
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                    <small class="text-muted">@evt.Location</small>
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-users text-success me-2"></i>
                                    <small class="text-muted">@evt.AvailableSeats / @evt.Capacity seats available</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 p-3 pt-0">
                            <a asp-action="Details" asp-route-id="@evt.Id" class="btn btn-primary w-100">
                                <i class="fas fa-info-circle me-2"></i>View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>