@{
    ViewData["Title"] = "Home";
}

<div class="hero-section fade-in-up">
    <div class="container">
        <h1 class="hero-title">
            <i class="fas fa-star me-3"></i>Welcome to EventBooking
        </h1>
        <p class="lead text-muted mb-4">
            Discover and book amazing events with secure authentication and role-based access
        </p>
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Event" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-calendar-alt me-2"></i>Browse Events
            </a>
            @if (User.Identity?.IsAuthenticated != true)
            {
                <a asp-controller="Account" asp-action="Register" class="btn btn-success btn-lg">
                    <i class="fas fa-user-plus me-2"></i>Get Started
                </a>
            }
        </div>
    </div>
</div>

<div class="row g-4 mt-4">
    <div class="col-md-4">
        <div class="card h-100 text-center fade-in-up" style="animation-delay: 0.1s;">
            <div class="card-body p-4">
                <div class="icon-box mx-auto">
                    <i class="fas fa-shield-alt fa-lg"></i>
                </div>
                <h3 class="h5 mb-3">Secure Authentication</h3>
                <p class="text-muted">
                    ASP.NET Core Identity with Google OAuth integration and role-based authorization
                </p>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card h-100 text-center fade-in-up" style="animation-delay: 0.2s;">
            <div class="card-body p-4">
                <div class="icon-box mx-auto">
                    <i class="fas fa-rocket fa-lg"></i>
                </div>
                <h3 class="h5 mb-3">CI/CD Pipeline</h3>
                <p class="text-muted">
                    Automated deployment with GitHub Actions - code to production in minutes
                </p>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card h-100 text-center fade-in-up" style="animation-delay: 0.3s;">
            <div class="card-body p-4">
                <div class="icon-box mx-auto">
                    <i class="fas fa-lock fa-lg"></i>
                </div>
                <h3 class="h5 mb-3">Security Features</h3>
                <p class="text-muted">
                    Protected against open redirect attacks with comprehensive URL validation
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-lg-6 mb-4">
        <div class="card fade-in-up" style="animation-delay: 0.4s;">
            <div class="card-body p-4">
                <h3 class="h4 mb-3">
                    <i class="fas fa-users text-primary me-2"></i>Role-Based Access
                </h3>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i><strong>Admin:</strong> Manage roles and users</li>
                    <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i><strong>Organizer:</strong> Create and manage events</li>
                    <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i><strong>User:</strong> Browse and book events</li>
                </ul>
            </div>
        </div>
    </div>
    
    <div class="col-lg-6 mb-4">
        <div class="card fade-in-up" style="animation-delay: 0.5s;">
            <div class="card-body p-4">
                <h3 class="h4 mb-3">
                    <i class="fas fa-cogs text-primary me-2"></i>Technical Features
                </h3>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-code text-info me-2"></i>ASP.NET Core MVC</li>
                    <li class="mb-2"><i class="fas fa-database text-info me-2"></i>Entity Framework Core</li>
                    <li class="mb-2"><i class="fas fa-cloud text-info me-2"></i>Deployed on Heroku</li>
                    <li class="mb-2"><i class="fas fa-github text-info me-2"></i>GitHub Actions CI/CD</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@if (User.Identity?.IsAuthenticated == true)
{
    <div class="alert alert-info text-center mt-4 fade-in-up" style="animation-delay: 0.6s;">
        <i class="fas fa-info-circle me-2"></i>
        Welcome back, <strong>@(User.Identity?.Name ?? "User")</strong>! 
        @if (User.IsInRole("Admin"))
        {
            <span class="badge bg-danger ms-2">Admin</span>
        }
        else if (User.IsInRole("Organizer"))
        {
            <span class="badge bg-primary ms-2">Organizer</span>
        }
        else if (User.IsInRole("User"))
        {
            <span class="badge bg-success ms-2">User</span>
        }
    </div>
}
