@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "Edit Users in Role";
}

<div class="container">
    <h2>Edit Users in Role: @ViewBag.RoleName</h2>

    <form asp-action="EditUsersInRole" method="post">
        <input type="hidden" name="roleId" value="@ViewBag.RoleId" />

        <div class="card">
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check mb-2">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">
                            @Model[i].UserName
                        </label>
                    </div>
                }
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>