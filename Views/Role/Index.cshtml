@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Manage Roles";
}

<div class="main-container fade-in-up">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-users-cog text-primary me-2"></i>Role Management
            </h2>
            <p class="text-muted mb-0">Manage system roles and permissions</p>
        </div>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>Create New Role
        </a>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">
                                <i class="fas fa-shield-alt me-2"></i>Role Name
                            </th>
                            <th class="text-center">Users</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <strong>@role.Name</strong>
                                    @if (role.Name == "Admin")
                                    {
                                        <span class="badge bg-danger ms-2">System Role</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <i class="fas fa-users text-muted"></i>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@role.Id" 
                                           class="btn btn-sm btn-primary" title="Edit Role">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="EditUsersInRole" asp-route-roleId="@role.Id" 
                                           class="btn btn-sm btn-info" title="Manage Users">
                                            <i class="fas fa-users"></i>
                                        </a>
                                        @if (role.Name != "Admin")
                                        {
                                            <form asp-action="Delete" asp-route-id="@role.Id" method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        onclick="return confirm('Are you sure you want to delete this role?')" 
                                                        title="Delete Role">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
